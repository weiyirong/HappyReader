<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/nice_eye_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:layout_weight="1"
        layout="@layout/header_layout" />

    <cn.domob.android.ads.DomobAdView
        android:id="@+id/domobAdXML"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <GridView
        android:id="@+id/nice_eye_gridview"
        android:layout_width="fill_parent"
        android:layout_height="0.0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:horizontalSpacing="0dip"
        android:listSelector="@drawable/list_selector_background_selected"
        android:numColumns="2"
        android:verticalSpacing="2dip" >
    </GridView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="@drawable/footer_main_bg"
        android:orientation="horizontal" >

        <cn.domob.android.ads.DomobAdView
            android:id="@+id/domobAdXML1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/footer_menu" />
    </LinearLayout>

</LinearLayout>